name hello
namespace examples

//
// A minimal hello world action
//
http GET "/hello?caller={caller}" (action=hello) {
	caller String (default="Mystery Person")

	expect 200 {
		greeting String
	}
}


example HelloRequest (name=helloExample) {
	"caller": "Lee"
}

example HelloResponse (name=helloExample) {
	"greeting": "Hello, Lee"
}
